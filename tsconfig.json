{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "Preserve",
		"moduleResolution": "Bundler",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"outDir": "dist/electron"
	},
	"include": ["src/electron/**/*"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
